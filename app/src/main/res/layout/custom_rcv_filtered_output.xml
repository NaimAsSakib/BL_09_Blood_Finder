<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/rcv_AfterFilter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="#e6e6e6"
        app:cardCornerRadius="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_BloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" A+ "
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayoutContactListAfterFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/rcv_AfterFilter"
        app:layout_constraintStart_toEndOf="@id/rcv_AfterFilter"
        app:layout_constraintTop_toTopOf="@id/rcv_AfterFilter">

        <TextView
            android:id="@+id/tvNameContactListAfterFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mohammad Masudur Rahman"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dhaka"
            android:textColor="#94989e"
            android:textSize="11sp"
            android:textStyle="normal"
            android:layout_gravity="start"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/rcv_Vertical_CardView_Call_Filtered"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:background="#f5f5f5"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="@id/rcv_AfterFilter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rcv_AfterFilter">

        <ImageView
            android:id="@+id/ivCallFiltered"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@drawable/call" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#e6e6e6"
        app:layout_constraintTop_toBottomOf="@id/rcv_AfterFilter" />

</androidx.constraintlayout.widget.ConstraintLayout>